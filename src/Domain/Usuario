<?php
// Entidad Usuario - Capa de Dominio
class Usuario {
    public $id;
    public $clave;
    public $nombre;
    public $rol;

    public function __construct($id, $clave, $nombre, $rol) {
        $this->id = $id;
        $this->clave = $clave;
        $this->nombre = $nombre;
        $this->rol = $rol;
    }
}
